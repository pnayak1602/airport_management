<%- include("header") -%>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="pranamya/flight_view/fonts/icomoon/style.css">

  <link rel="stylesheet" href="pranamya/flight_view/css/owl.carousel.min.css">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="pranamya/flight_view/css/bootstrap.min.css">

  <!-- Style -->
  <link rel="stylesheet" href="pranamya/flight_view/css/style.css">

  <title>ABC Airport Flights</title>
</head>

<body>


  <div class="content">

    <div class="container">
      <h2 class="mb-5"></h2>

      <div class="table-responsive">

        <table class="table table-striped custom-table">
          <thead>
            <tr>
              <th scope="col">Airline Id</th>
              <th scope="col">Flight Number</th>
              <th scope="col">Source </th>
              <th scope="col">Destination</th>
              <th scope="col">Date of flight</th>
              <th scope="col">Total no. of seats</th>
              <th scope="col">No. of passengers booked</th>
            </tr>
          </thead>
          <tbody>
              <% for(var i=0;i<flights.length;i++) { %>
                <tr scope="row">
                  <td><%= flights[i].airlineid %></td>
                  <td><%= flights[i].flightno %></td>
                  <td><%= flights[i].source %></td>
                  <td><%= flights[i].destination %></td>
                  <td><%= flights[i].date_of_flight %></td>
                  <td><%= flights[i].no_of_seats %></td>
                  <td><%= flights[i].booked %></td>
                </tr>
                <% } %>
          </tbody>
        </table>
      </div>


    </div>

  </div>



  <script src="pranamya/flight_view/js/jquery-3.3.1.min.js"></script>
  <script src="pranamya/flight_view/js/popper.min.js"></script>
  <script src="pranamya/flight_view/js/bootstrap.min.js"></script>
  <script src="pranamya/flight_view/js/main.js"></script>
  <%- include("footer") -%>