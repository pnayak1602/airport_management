<style>
    body {
        background-image: url('pranamya/img/bg.avif');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">

                    <form method="POST" action="/checkout">
                        <% for(var i=0;i<number;i++) { %>
                        <div>
                            <label for="seat">Passenger <%= i+1 %> :</label>
                            <label> Name </label>
                            <input type="text" name="name">
                            <label> Age </label>
                            <input type="number" name="age">
                            <label> Select Seat : </label>
                            <select name="seat" id="seat">
                                <% for(var j=0;j<350;j++) { %>
                                <option value=<% j+1 %>><%= j+1 %></option>
                                <% } %>
                            </select>
                        </div>
                        <br>
                        <% } %>
                        <div class="p-t-15">
                                <button name="submit" value="order_food" class="btn btn--radius-2 btn--blue" type="submit">ORDER FOOD</button>
                        </div>
                        <div class="p-t-15">
                                <button name="submit" value="pay_now" class="btn btn--radius-2 btn--blue" type="submit">PAY NOW!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="pranamya/book/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="pranamya/book/vendor/select2/select2.min.js"></script>
    <script src="pranamya/book/vendor/datepicker/moment.min.js"></script>
    <script src="pranamya/book/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="pranamya/book/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

